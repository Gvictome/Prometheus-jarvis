# ─── OpenClaw Configuration ───────────────────────────────
OPENCLAW_SECRET_KEY=change-me-to-a-random-string
OPENCLAW_LOG_LEVEL=INFO

# ─── Inference ────────────────────────────────────────────
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:3b
OLLAMA_EMBED_MODEL=nomic-embed-text

OPENROUTER_API_KEY=sk-or-...
OPENROUTER_MODEL=google/gemma-3-27b-it:free
OPENROUTER_MAX_TOKENS=4096

# Legacy Claude (optional fallback)
# ANTHROPIC_API_KEY=sk-ant-...
# CLAUDE_MODEL=claude-sonnet-4-20250514
# CLAUDE_MAX_TOKENS=4096

# Complexity threshold: 0.0=always cloud, 1.0=always local
INFERENCE_COMPLEXITY_THRESHOLD=0.6
INFERENCE_MONTHLY_BUDGET_USD=50.00

# ─── Messaging Channels ──────────────────────────────────
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
WHATSAPP_BRIDGE_URL=http://whatsapp-bridge:3001

# ─── Voice Gateway ───────────────────────────────────────
VOICE_GATEWAY_URL=http://voice-gateway:8001
WHISPER_MODEL=base

# ─── External Services ───────────────────────────────────
NOTION_TOKEN=secret_...
NOTION_CALENDAR_DB=
NOTION_TASKS_DB=
NOTION_PROJECTS_DB=
NOTION_NOTES_DB=
NOTION_DAILY_PARENT_PAGE=

HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=

SEARCH_API_KEY=
SEARCH_ENGINE_ID=

# ─── Redis ────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─── Security ────────────────────────────────────────────
ADMIN_USER_IDS=["your-telegram-id","your-whatsapp-jid"]
ADMIN_PIN=1234

# ─── Agent Config ──────────────────────────────────────────
# Path to agents.json inside the container (bind-mounted from repo root)
AGENTS_CONFIG_PATH=/app/agents.json

# Per-sender routing -- set these to actual Telegram/WhatsApp IDs.
# Values here are expanded automatically from agents.json placeholders.
DYMANI_ID=your_telegram_id_here
KENDALL_ID=your_telegram_id_here
CHRISTIAN_ID=your_telegram_id_here

# ─── Data Paths ──────────────────────────────────────────
DATA_DIR=/data
DB_PATH=/data/openclaw.db
